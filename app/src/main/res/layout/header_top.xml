<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/hall_userwoman"
        app:civ_border_color="#ffd581"
        app:civ_border_width="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_gold_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="11dp"
        android:background="@mipmap/game_select_gold_bg"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="0"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/login_return"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_set"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/login_set"
        app:layout_constraintRight_toLeftOf="@+id/iv_return"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_return"/>

</android.support.constraint.ConstraintLayout>
