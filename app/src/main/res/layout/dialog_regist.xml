<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="470dp"
        android:layout_height="342dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cons_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="450dp"
            android:background="#fff"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="450dp"
                android:layout_height="31dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="注册账号"
                android:textColor="#fff"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_username_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="账号"
                android:textColor="#666"
                app:layout_constraintRight_toRightOf="@id/tv_reapeatpsw_tip"

                app:layout_constraintTop_toBottomOf="@id/tv_title"/>


            <TextView
                android:id="@+id/tv_psw_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="密码"
                android:textColor="#666"
                app:layout_constraintRight_toRightOf="@id/tv_reapeatpsw_tip"
                app:layout_constraintTop_toBottomOf="@id/tv_username_tip"/>

            <TextView
                android:id="@+id/tv_reapeatpsw_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="确认密码"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_psw_tip"/>

            <TextView
                android:id="@+id/tv_tel_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="#666"
                app:layout_constraintRight_toRightOf="@id/tv_username_tip"
                app:layout_constraintTop_toBottomOf="@id/tv_reapeatpsw_tip"/>

            <TextView
                android:id="@+id/tv_question_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="密码提问"
                android:textColor="#666"
                app:layout_constraintRight_toRightOf="@id/tv_username_tip"
                app:layout_constraintTop_toBottomOf="@id/tv_tel_tip"/>

            <TextView
                android:id="@+id/tv_answer_tip"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="答案"
                android:textColor="#666"
                app:layout_constraintRight_toRightOf="@id/tv_username_tip"
                app:layout_constraintTop_toBottomOf="@id/tv_question_tip"/>

            <LinearLayout
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/tv_username_tip"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@drawable/selector_et"
                    android:hint="请输入账号"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_et"
                    android:hint="请输入密码"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_repeat_psw"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_et"
                    android:hint="请确认密码"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_et"
                    android:hint="请输入手机号"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_question"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_et"
                    android:hint="请输入问题"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_answer"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_et"
                    android:hint="请输入答案"
                    android:paddingLeft="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_width="284dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_comnfirm"
                android:text="确认"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_answer_tip"/>
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_coin_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
