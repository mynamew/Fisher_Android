<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#66333333" />
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#66666666" />
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="@color/colorGray" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#66000000" />
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>